<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/blue_color</item>
    <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    <item name="alertDialogTheme">@style/AlertDialogTheme</item>
  </style>
  <style name="AppThemeSecond" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/red</item>
    <item name="colorPrimaryDark">@color/red</item>
    <item name="colorAccent">@color/blue_color</item>
    <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    <item name="alertDialogTheme">@style/AlertDialogTheme</item>
  </style>

  <style name="fullscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/red</item>
    <item name="colorPrimaryDark">@color/red</item>
    <item name="colorAccent">@color/red</item>
    <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="alertDialogTheme">@style/AlertDialogTheme</item>
  </style>
  <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
    <item name="boxStrokeColor">@color/blue_color</item>
    <item name="boxStrokeWidth">1dp</item>
    <item name="boxBackgroundColor">@android:color/transparent</item>
    <item name="errorTextAppearance">@style/ErrorText</item>
    <item name="hintTextColor">@color/blue_color</item>

  </style>
  <style name="EditTextInputLayoutDesableStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
    <item name="boxStrokeColor">@color/light_gray_new</item>
    <item name="boxStrokeWidth">1dp</item>
    <item name="boxBackgroundColor">@android:color/transparent</item>
    <item name="errorTextAppearance">@style/ErrorText</item>
    <item name="hintTextColor">@color/light_gray_new</item>

  </style>

  <style name="ErrorText" parent="TextAppearance.Design.Error">
    <item name="android:textSize">11sp</item>
    <item name="android:textColor">@color/red</item>
  </style>
  <!--<style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
    <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
  </style>

  <style name="ThemeOverlay.App.Switch" parent="">
    <item name="colorOnSurface">@color/red</item>
    <item name="colorSecondary">@color/gray</item>

  </style>-->
  <style name="FullScreenDialogStyle" parent = "Theme.AppCompat.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowIsFloating">false</item>

  </style>

  <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
    <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
  </style>

  <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/blue_color</item>
  </style>

  <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/blue_color</item>
  </style>

  <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/red</item>
  </style>

</resources>