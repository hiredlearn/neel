<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#f3f3f3"
    app:contentPadding="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/_2sdp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/article"
        android:id="@+id/vehicleImage"
        app:siRadius="@dimen/_5sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car"
            android:id="@+id/VehicleType"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_14ssp"
            android:textColor="#545456"/>
        <LinearLayout
            android:id="@+id/lay_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/close"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9fa1aa"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Delete"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/_10ssp"
            android:id="@+id/VehicleCategory"
            android:text="Hatch Back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#747c94"
                android:gravity="center"
                android:id="@+id/VehicleColor"
                android:textSize="@dimen/_10ssp"
                android:text="Black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#747c94"
                android:id="@+id/VehicleBrand"
                android:textSize="@dimen/_10ssp"
                android:text="Maruti suzuki"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#747c94"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/VehicleModel"
                android:text="Maruti suzuki swift"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KL JP-5568"
            android:textColor="@color/red"
            android:id="@+id/VehicleNumber"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_12ssp"/>


    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>